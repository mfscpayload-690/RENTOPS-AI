{
    // Use JDK 21 for the Java Language Server (stable runtime for the extension)
    "java.jdt.ls.java.home": "C:\\Program Files\\Java\\jdk-21",

    // Keep both JDKs registered; Java 25 remains default for project builds/run
    "java.configuration.runtimes": [
        { "name": "JavaSE-21", "path": "C:\\Program Files\\Java\\jdk-21" },
        { "name": "JavaSE-25", "path": "C:\\Program Files\\Java\\jdk-25", "default": true }
    ],

    // Let VS Code Java import Maven projects and resolve classpath from pom.xml
    "java.import.maven.enabled": true,
    "java.import.gradle.enabled": false,
    "java.import.generatesMetadataFilesAtProjectRoot": false,
        "java.configuration.updateBuildConfiguration": "automatic",

    // Project behavior
    "java.configuration.detectJdksAtStart": true,
    "java.compile.nullAnalysis.mode": "disabled",
    "java.eclipse.downloadSources": true,
    "java.clean.workspace": false,

    // Formatting and debugging
    "java.format.settings.url": ".vscode/java-formatter.xml",
    "java.debug.settings.onBuildFailureProceed": true
}